.container {
  height: 100vh;
  background: #eee;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.list-box {
  width: 100%; 
  height: 100vh;
  overflow-y: scroll;
  padding-bottom: 50rpx;
}
.list-item {
  width: 95%;
  margin: 50rpx auto 0;
}
.success-error {
  font-family: PingFangSC;
  font-weight: 400;
  font-size: 28rpx;
  color: rgb(16, 16, 16);
  font-style: normal;
  letter-spacing: 0px;
  line-height: 40rpx;
  text-decoration: none;
  padding-left: 20rpx;
  margin-top: 10rpx;
}
.purchase-order {
  background: #fff;
  width: 100%;

  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  box-sizing: border-box;
}
.order-info {
  flex: 1;
}
.order-bt {
  font-family: PingFangSC;
  font-weight: 700;
  font-size: 32rpx;
  color: rgb(16, 16, 16);
  font-style: normal;
  letter-spacing: 0px;
  line-height: 46rpx;
  text-decoration: none;
}
.order-bt-number {
  font-family: PingFangSC;
  font-weight: 400;
  font-size: 28rpx;
  color: rgb(16, 16, 16);
  font-style: normal;
  letter-spacing: 0px;
  line-height: 40rpx;
  text-decoration: none;
}
.order-info-text-color {
  font-size: 30rpx;
  color: #999;
  margin-top: 10rpx;
}
.next-style {
  font-weight: 700;
}
.save {
  width: 95% !important;
  margin: 60rpx auto 0;
  background-color: rgb(24, 144, 255);
  border-color: rgb(24, 144, 255);
  color: #fff;
  font-size: 28rpx;
}
.order-info-text {
  font-family: PingFangSC;
  font-weight: 400;
  font-size: 28rpx;
  color: rgb(16, 16, 16);
  margin-top: 10rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.people {
  margin-left: 15%;
}
.show-lo{
  font-family: PingFangSC;
  font-weight: 400;
  font-size: 24rpx;
  color: rgb(16, 16, 16);
  font-style: normal;
  letter-spacing: 0px;
  line-height: 40rpx;
  text-decoration: none;
  display: flex;
  justify-content: flex-start;
}
.status{
  font-family: PingFangSC;
    font-weight: 400;
    font-size: 24rpx;
    color: rgb(1, 113, 240);
    font-style: normal;
    letter-spacing: 0px;
    line-height: 40rpx;
    text-decoration: none;
    margin-left: 10rpx;
}
.log-item{
  display: flex;
  align-items: center;
  margin-top: 10rpx;
}
.dot{
  width: 5rpx;
  border-radius: 50%;
  height: 5rpx;
  background: #666;
}
.line{
  height: 120rpx;
  width: 2rpx;
  background: #666;
  margin-top: 5rpx;
} 
.log-left{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-right: 20rpx;
}
.context{
 font-size: 24rpx;
}
.time{
  font-size: 24rpx;

}