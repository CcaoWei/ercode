.container {
  height: 100vh;
  background: #eee;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.list-item {
  width: 95%;
  margin: 50rpx auto 0;
}
.success-error {
  font-family: PingFangSC;
  font-weight: 400;
  font-size: 28rpx;
  color: rgb(16, 16, 16);
  font-style: normal;
  letter-spacing: 0px;
  line-height: 40rpx;
  text-decoration: none;
  padding-left: 20rpx;
  margin-top: 10rpx;
}
.purchase-order {
  background: #fff;
  width: 100%;

  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  box-sizing: border-box;
}
.order-info {
  flex: 1;
}
.order-bt {
  font-family: PingFangSC;
  font-weight: 700;
  font-size: 32rpx;
  color: rgb(16, 16, 16);
  font-style: normal;
  letter-spacing: 0px;
  line-height: 46rpx;
  text-decoration: none;
}
.order-bt-number {
  font-family: PingFangSC;
  font-weight: 400;
  font-size: 28rpx;
  color: rgb(16, 16, 16);
  font-style: normal;
  letter-spacing: 0px;
  line-height: 40rpx;
  text-decoration: none;
}
.order-info-text-color {
  font-size: 30rpx;
  color: #999;
  margin-top: 10rpx;
}
.next-style {
  font-weight: 700;
  font-size: 44rpx;
}
.save {
  width: 95% !important;
  margin: 60rpx auto 0;
  background-color: rgb(24, 144, 255);
  border-color: rgb(24, 144, 255);
  color: #fff;
  font-size: 28rpx;
}
.order-info-text {
  font-family: PingFangSC;
  font-weight: 400;
  font-size: 28rpx;
  color: rgb(16, 16, 16);
  margin-top: 10rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.people {
  margin-left: 15%;
}
.error-text{
  font-family: PingFangSC;
    font-weight: 400;
    font-size: 28rpx;
    color: rgba(233, 63, 51, 1);
    font-style: normal;
    letter-spacing: 0px;
    line-height: 40rpx;
    text-decoration: none;
    padding-left: 10rpx;
    margin-top: 10rpx;
}